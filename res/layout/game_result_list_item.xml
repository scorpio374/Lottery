<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#292b37"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginRight="1dip"
        android:layout_marginTop="1dip"
        android:layout_weight="1"
        android:background="#393e4d"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_league"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="欧冠杯"
            android:textColor="#a3a7bf"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_matchId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="001"
                android:textColor="#a7a7a9"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_gameTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:text="15:30"
                android:textColor="#a7a7a9"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginRight="1dip"
        android:layout_marginTop="1dip"
        android:layout_weight="1.5"
        android:background="#323642"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_matchteam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="特兰米尔"
            android:textColor="#c5cbea"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dip"
        android:layout_marginTop="1dip"
        android:layout_weight="1"
        android:background="@drawable/game_score_right"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="半 2:1"
            android:textColor="#e5af0b"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="全 4:3"
            android:textColor="#e5af0b"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginRight="1dip"
        android:layout_marginTop="1dip"
        android:layout_weight="1.5"
        android:background="#323642"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_hostTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="沃尔索尔"
            android:textColor="#c5cbea"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>