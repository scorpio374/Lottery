<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/userdata_head"
        style="@style/head_style" >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="left"
            android:padding="8dip"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人资料"
            android:textColor="@color/white"
            android:textSize="@dimen/main_textsize2" />

        <ImageButton
            android:id="@+id/head_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="left"
            android:padding="8dip"
            android:src="@drawable/question" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="16dip"
        android:background="@drawable/rect_corner_edit_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:text="持卡人："
            android:textColor="@color/white"
            android:textSize="@dimen/main_textsize" />

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="严**"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/edit_color"
            android:textCursorDrawable="@drawable/edit"
            android:textSize="@dimen/main_textsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="16dip"
        android:background="@drawable/rect_corner_edit_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:text="身份证："
            android:textColor="@color/white"
            android:textSize="@dimen/main_textsize" />

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="4221312****772176"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/edit_color"
            android:textCursorDrawable="@drawable/edit"
            android:textSize="@dimen/main_textsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="16dip"
        android:background="@drawable/rect_corner_edit_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:text="银  行："
            android:textColor="@color/white"
            android:textSize="@dimen/main_textsize" />

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="请选择银行"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/edit_color"
            android:textCursorDrawable="@drawable/edit"
            android:textSize="@dimen/main_textsize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dip"
            android:src="@drawable/checkbank" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="16dip"
        android:background="@drawable/rect_corner_edit_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:text="卡  号："
            android:textColor="@color/white"
            android:textSize="@dimen/main_textsize" />

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="请填写卡号"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/edit_color"
            android:textCursorDrawable="@drawable/edit"
            android:textSize="@dimen/main_textsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="16dip"
        android:background="@drawable/rect_corner_edit_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:text="开户地："
            android:textColor="@color/white"
            android:textSize="@dimen/main_textsize" />

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="请选择开户地"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/edit_color"
            android:textCursorDrawable="@drawable/edit"
            android:textSize="@dimen/main_textsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="16dip"
        android:background="@drawable/rect_corner_edit_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:text="密  码："
            android:textColor="@color/white"
            android:textSize="@dimen/main_textsize" />

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="请输入登录密码"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/edit_color"
            android:textCursorDrawable="@drawable/edit"
            android:textSize="@dimen/main_textsize" />
    </LinearLayout>

    

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="16dip"
        android:background="@drawable/rect_corner_bg"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/green"
        android:textSize="@dimen/main_textsize2" />

</LinearLayout>