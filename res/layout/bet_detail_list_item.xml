<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#323642"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bet_detail_week"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:text="周五"
            android:textColor="#a5a8b3" />

        <ImageView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/bet_detail_team"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:layout_weight="2"
            android:gravity="center"
            android:maxLines="3"
            android:text="横滨水手\nvs\n浦和红钻"
            android:textColor="#a5a8b3" />

        <ImageView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <com.xmtq.lottery.widget.CustomListView
            android:id="@+id/bet_odds_listview"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:divider="@color/line_color"
            android:dividerHeight="1dip"
            android:gravity="center" 
            android:scrollbars="none"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/line_color" />

</LinearLayout>