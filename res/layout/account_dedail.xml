<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/order_head"
        style="@style/head_style" >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="left"
            android:padding="8dip"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账户明细"
            android:textColor="@color/white"
            android:textSize="@dimen/main_textsize2" />

        <TextView
            android:id="@+id/head_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="left"
            android:padding="8dip"
            android:src="@drawable/question"
            android:text="近一周"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3f3e4d" >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="8dip"
            android:background="@drawable/rect_corner_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="1dip" >

            <RadioButton
                android:id="@+id/my_account"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="账户"
                android:textColor="@drawable/button_textcolor_selector"
                android:textSize="@dimen/main_textsize" />

            <ImageView
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/green" />

            <RadioButton
                android:id="@+id/account_recharge"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_selector"
                android:button="@null"
                android:gravity="center"
                android:text="充值"
                android:textColor="@drawable/button_textcolor_selector"
                android:textSize="@dimen/main_textsize" />

            <ImageView
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/green" />

            <RadioButton
                android:id="@+id/account_deposit"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_selector"
                android:button="@null"
                android:gravity="center"
                android:text="提现"
                android:textColor="@drawable/button_textcolor_selector"
                android:textSize="@dimen/main_textsize" />

            <ImageView
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/green" />

            <RadioButton
                android:id="@+id/account_red_package"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_btn_selector"
                android:button="@null"
                android:gravity="center"
                android:text="红包"
                android:textColor="@drawable/button_textcolor_selector"
                android:textSize="@dimen/main_textsize" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支出：89.50元"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_weight="1"
            android:text="收入100.00元"
            android:textColor="#50b950" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:src="@drawable/right" />
    </LinearLayout>

    <ListView
        android:id="@+id/account_detail_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:cacheColorHint="#00000000"
        android:divider="@color/deep_gray"
        android:dividerHeight="0dip"
        android:fadingEdge="none"
        android:scrollbars="none" />

</LinearLayout>