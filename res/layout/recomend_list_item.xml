<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dip"
    android:background="@color/gray_item"
    android:orientation="vertical"
    android:padding="5dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/game_time"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="15:30"
            android:textColor="@color/white_shallow"
            android:textSize="@dimen/main_textsize" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center" >

            <TextView
                android:id="@+id/match_team"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="特兰米尔"
                android:textColor="@color/white_shallow" />

            <TextView
                android:id="@+id/league"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="欧冠杯"
                android:textColor="@color/white_light" />

            <TextView
                android:id="@+id/host_team"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="沃尔索尔"
                android:textColor="@color/white_shallow" />
        </LinearLayout>

        <View
            android:id="@+id/recomend_item_view"
            android:layout_width="20dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="10dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/odds_more"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/play_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="胜平负"
                android:textColor="@color/white_shallow" />

            <ImageView
                android:id="@+id/more_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:background="@null"
                android:gravity="center"
                android:src="@drawable/more_down" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/odds_rect_solid" >

            <ToggleButton
                android:id="@+id/win"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="1dip"
                android:layout_marginTop="1dip"
                android:layout_weight="1"
                android:background="@drawable/recomend_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="12dip"
                android:paddingTop="12dip"
                android:textColor="@drawable/recomend_textcolor_selector"
                android:textOff=""
                android:textOn=""
                android:textSize="@dimen/main_textsize" />

            <ToggleButton
                android:id="@+id/draw"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="1dip"
                android:layout_marginTop="1dip"
                android:layout_weight="1"
                android:background="@drawable/recomend_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/recomend_textcolor_selector"
                android:textOff=""
                android:textOn=""
                android:textSize="@dimen/main_textsize" />

            <ToggleButton
                android:id="@+id/lose"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_marginTop="1dip"
                android:layout_weight="1"
                android:background="@drawable/recomend_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/recomend_textcolor_selector"
                android:textOff=""
                android:textOn=""
                android:textSize="@dimen/main_textsize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recomend_ll_analyze"
            android:layout_width="20dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/analyze"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center" 
                android:text="析"
                android:textColor="@color/white_shallow" />

            <ImageView
                android:id="@+id/dis_agree"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/dis_agree" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>