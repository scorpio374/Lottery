<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dip"
    android:background="@color/gray_item"
    android:orientation="vertical"
    android:padding="5dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/recomend_item_time"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="15:30"
            android:textColor="@color/white_shallow"
            android:textSize="@dimen/main_textsize" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="特兰米尔"
                android:textColor="@color/white_shallow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="欧冠杯"
                android:textColor="@color/white_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="沃尔索尔"
                android:textColor="@color/white_shallow" />
        </LinearLayout>

        <TextView
            android:layout_width="20dip"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="10dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/recomend_item_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="胜平负"
                android:textColor="@color/white_shallow" />

            <ImageView
                android:id="@+id/more_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:src="@drawable/more_down" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/rect_bg" >

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="1dip" >

                <RadioButton
                    android:id="@+id/win"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:text="胜 1.55"
                    android:textColor="@drawable/button_textcolor_selector"
                    android:textSize="@dimen/main_textsize" />

                <ImageView
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="@color/green" />

                <RadioButton
                    android:id="@+id/draw"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="平 1.23"
                    android:textColor="@drawable/button_textcolor_selector"
                    android:textSize="@dimen/main_textsize" />

                <ImageView
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="@color/green" />

                <RadioButton
                    android:id="@+id/lose"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_btn_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="负 1.55"
                    android:textColor="@drawable/button_textcolor_selector"
                    android:textSize="@dimen/main_textsize" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="20dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="析"
                android:textColor="@color/white_shallow" />

            <ImageView
                android:id="@+id/dis_agree"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/dis_agree" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>